@model ProductModel
@{ ViewData["Title"] = "EditProduct";
                var counter = 0; }
@*Script _Layout içinde tanımlandı*@
@section Scripts{
    <script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
    <script>CKEDITOR.replace('editor');</script>
}


<h1>Ürün Düzenle</h1>
<hr />

<form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="Id" value="@Model.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ProductName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ProductName" value="@Model.ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                    <img src="~/img/@Model.ImageUrl" width="80" />
                    <input type="file" name="file" value="" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Modell" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Modell" value="@Model.Modell" class="form-control" />
                    <span asp-validation-for="Modell" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Dimensions" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Dimensions" value="@Model.Dimensions" class="form-control" />
                    <span asp-validation-for="Dimensions" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Material" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Material" value="@Model.Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="WarrantyPeriod" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="WarrantyPeriod" value="@Model.WarrantyPeriod" class="form-control" />
                    <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="QuantityPerUnit" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="QuantityPerUnit" value="@Model.QuantityPerUnit" class="form-control" type="number" />
                    <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UnitsInStock" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="UnitsInStock" value="@Model.UnitsInStock" class="form-control" type="number" />
                    <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="SequenceMeter" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="SequenceMeter" value="@Model.SequenceMeter" class="form-control" type="number" />
                    <span asp-validation-for="SequenceMeter" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UnitPrice" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="UnitPrice" value="@Model.UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Ürünü Kaydet</button>
                </div>
            </div>

        </div>

    </div>

</form>


