@model ProductListModel
@{ ViewData["Title"] = "Tüm Ürünler"; }

<div class="row">
    <div class="col-md-6">
        <h1>Ürün Düzenle</h1>
     </div>
    <div class="col-md-6">
        <a class="btn btn-danger float-right" href="/Products/CreateProduct">Yeni Üsün Ekle</a>
    </div>
</div>

<hr />
@if (Model.Products.Count > 0)
{
<table class="table table-bordered">
    <thead>
        <tr>
            <td style="width:30px;">Id</td>
            <td style="width:100px;">Resim</td>
            <td>Name</td>
            <td style="width:12px;">Fiyat</td>
            <td style="width:150px;"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
<tr>
    <td>@item.Id</td>
    <td><img src="~/img/@item.ImageUrl" width="80" /></td>
    <td>@item.ProductName</td>
    <td>@item.UnitPrice</td>
    <td>
        <a class="btn btn-primary btn-sm mr-2" href="/Products/Update/@item.Id">Düzenle</a>

        <form action="/Products/deleteproduct" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="@item.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
        </form>


    </td>
</tr>}

    </tbody>
</table> }
            else
            {
<div class="alert alert-warning">
    <h4>Ürün Yok</h4>
</div>}
