@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-12">
                <img src="~/img/@Model.ImageUrl" alt="@Model.ProductName" class="img-thumbnail" />
            </div>
            <div class="col-md-12">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@Model.ProductName</a>
                    </h4>
                    <small class="text-muted">
                        <i class="fas fa-lira-sign"></i> @Model.UnitPrice
                    </small>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Shop" asp-action="details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Ürün Detay</a>
                    @if (User.Identity.IsAuthenticated)
                    {
        <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="hidden" name="quantity" value="1" />
            <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</button>
        </form>}
                </div>

            </div>
        </div>
    </div>
</div>